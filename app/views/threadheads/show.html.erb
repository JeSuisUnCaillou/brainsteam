<% provide(:title, @threadhead.first_message.title) %> <!-- a changer par le nom du thread-->
<div class="row">
  <aside class="span5">
    <section>
      <h1> <!-- a changer par le titre du thread-->
         <%= @threadhead.first_message.title %>
      </h1>
      <div class= "thread_head_body" %>
        <div class="thread_tags" >
         <%= render @thread_tags %> 
        </div>
        <div class="thread_content">
          <%= @threadhead.first_message.text %>
        </div>
      </div>
    </section>
  </aside>
</div>
